<section id='members'>
  <header id='header'>
    <h1>members</h1>
  </header>

  <section id='main'>
    {{outlet}}
  </section>

  <footer id='footer'>
    <p>Total:</p>
    {{meta.total}}
  </footer>
</section>

<footer id='info'>
  <p>Filter By:</p>
  {{input type="text" value=firstName action="filter" placeholder="First Name"}}
  {{input type="text" value=lastName action="filter" placeholder="Last Name"}}
  <p>Pages:</p>
  {{#link-to 'members' (query-params page="1")}}1{{/link-to}}
  {{#link-to 'members' (query-params page="2")}}2{{/link-to}}
  <p>Page Size:</p>
  {{input type="text" value=pageSize action="filter"}}
</footer>